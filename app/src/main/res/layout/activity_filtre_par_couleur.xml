<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="thomasapp.wineforfriendsnd.Filtre_par_couleur"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/colorPrimary"/>

        <ProgressBar
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/progressbaraddwine"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            android:visibility="invisible"/>

    </RelativeLayout>


    <ImageView
        android:id="@+id/imageflecheblanche"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/flecheblanche"
        android:layout_marginLeft="16dp"
        android:layout_gravity="center_vertical"
        android:contentDescription="flecheblanche"
        android:background="@null"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"/>


    <TextView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="Cliquez sur un des icones suivants pour selectionner un type:)"
        android:textColorHint="@color/colorSecondary"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/typevin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:gravity="center"
        android:text=""
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="140dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/imageButtoncoupdecoeur"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:adjustViewBounds="true"
                android:background="@null"
                android:contentDescription="champ"
                android:scaleType="fitCenter"
                android:src="@drawable/coupdecoeurcercle" />

            <ImageButton
                android:id="@+id/imageButtonmesvins"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@null"
                android:contentDescription="spirit"
                android:src="@drawable/mesvins"
                android:layout_toRightOf="@+id/imageButtoncoupdecoeur"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/imageButtonrouge"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@null"
                android:contentDescription="rouge"
                android:src="@drawable/rouge_test"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>

            <TextView
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_toRightOf="@id/imageButtonrouge"
                android:id="@+id/sep1"/>

            <ImageButton
                android:id="@+id/imageButtonrose"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@null"
                android:contentDescription="rose"
                android:src="@drawable/rose_test"
                android:layout_toRightOf="@id/sep1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>

            <TextView
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_toRightOf="@id/imageButtonrose"
                android:id="@+id/sep2"/>

            <ImageButton
                android:id="@+id/imageButtonblanc"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@null"
                android:contentDescription="blanc"
                android:src="@drawable/blanc_test"
                android:layout_toRightOf="@id/sep2"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/imageButtonchamp"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:adjustViewBounds="true"
                android:background="@null"
                android:contentDescription="champ"
                android:scaleType="fitCenter"
                android:src="@drawable/champagne" />

            <ImageButton
                android:id="@+id/imageButtonspirit"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@null"
                android:contentDescription="spirit"
                android:src="@drawable/spiritueux"
                android:layout_toRightOf="@+id/imageButtonchamp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/buttonaddwinetobdd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="400dp"
            android:text="Filtrer"
            android:textSize="20sp"
            android:textColor="@color/colorAccentblanc"
            android:background="@color/colorSecondary"/>

    </RelativeLayout>

</RelativeLayout>
