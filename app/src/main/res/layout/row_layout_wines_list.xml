<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/ivtype"
            android:src="@drawable/spiritueux_test"
            android:contentDescription="affichageimage" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tvchateaux"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:textStyle="bold"
                android:textSize="14sp"
                android:text="nom du chateaux"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:textColor="@color/colorSecondary"
                android:layout_marginStart="10dp" />

            <TextView
                android:id="@+id/tvcommentaire"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:textSize="12sp"
                android:text="commentaire"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:textColor="@color/colorSecondary"
                android:layout_marginStart="10dp" />

            <TextView
                android:id="@+id/tvaddedby"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:textSize="12sp"
                android:text="pseudo"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorSecondary"
                android:layout_marginStart="10dp" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginStart="55dp"
            android:id="@+id/ivcoupdecoeur"
            android:src="@drawable/coeurrouge"
            android:contentDescription="affichagecoupdecoeur"
            android:layout_marginLeft="350dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/separation"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="70dp"
        android:background="@color/colorPrimaryDark"/>
    <TextView
        android:id="@+id/coupdecoeurtext"
        android:layout_width="0.5dp"
        android:layout_height="0.5dp"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="70dp"
        android:background="@color/colorPrimaryDark"/>


</RelativeLayout>